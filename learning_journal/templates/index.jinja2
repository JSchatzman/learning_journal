
{% extends "layout.jinja2" %}
{% block title %}
My Learning Journal
{% endblock %}
{% block body %}
{% if request.authenticated_userid %}
    <h4>New Journal Entry:</h4>
    <form role="form" method="POST">
        <input type="hidden" name="csrf_token" value="{{ request.session.get_csrf_token() }}" />
        <div class="form-group">
            <p>Title</p>
            <input class="form-control" name="title"></input>
            <br>
            <p>Body<p>
            <textarea class="form-control" name="body" rows="10"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
{% endif %}
{% if entries %}
    {% for entry in entries %}
        <h2>
            <a href = "{{ request.route_url('detail', id=entry.id) }}">{{ entry.title }}</a>
        </h2>
        <h3>
        </h3>  
        <p class = "lead">by Jordan Schatzman</p>
        <p>Posted on {{entry.creation_date}}</p>
        <br/>
    {% endfor %}
{% else %}
    <p>This journal is empty</p>
{% endif %}
{% endblock %}
